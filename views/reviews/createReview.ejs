<% layout("/layouts/boilerplate.ejs") -%>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <form
        action="/listings/<%= id %>/review"
        method="post"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="content" class="form-label">Write your Review!</label>
          <textarea name="comment" class="form-control" required></textarea>
          <div class="invalid-feedback">Enter a Valid Response</div>
        </div>
        </div>
        <div class="row offset-2 col-6">
           <fieldset class="starability-basic" >
             <legend>Rating</legend>
             <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked aria-label="No rating." />
             <input type="radio" id="first-rate1" name="rating" value="1" />
             <label for="first-rate1" title="Terrible">1 star</label>
             <input type="radio" id="first-rate2" name="rating" value="2" />
             <label for="first-rate2" title="Not good">2 stars</label>
             <input type="radio" id="first-rate3" name="rating" value="3" />
             <label for="first-rate3" title="Average">3 stars</label>
             <input type="radio" id="first-rate4" name="rating" value="4" />
             <label for="first-rate4" title="Very good">4 stars</label>
             <input type="radio" id="first-rate5" name="rating" value="5" />
             <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
        </div>
       
        <!-- <div class="row offset-2 col-6">
          <div class="mb-3 ">
            <label for="rating" class="form-label">Rating</label>
            <input
              name="rating"
              type="range"
              class="form-range"
              min="1"
              max="5"
              required
              
            />
            <div class="invalid-feedback">Rating is Invalid</div>
          </div> -->
          <div class="mb-3 offset-2 row col-6">
            <label for="createdAt" class="form-label">Creation Date</label>
            <input
              type="date"
              name="createdAt"
              class="form-control"
            />
          </div>
        </div>
        <br />
        <div class="mb-3 offset-4 ">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>
</body>
