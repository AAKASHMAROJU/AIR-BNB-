<% layout("/layouts/boilerplate.ejs") -%>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <form
        action="http://localhost:8080/listings/<%= id %>/review"
        method="post"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="content" class="form-label">Write your Review!</label>
          <textarea name="comment" class="form-control" required></textarea>
          <div class="invalid-feedback">Enter a Valid Response</div>
        </div>
        </div>
        <div class="row offset-2 col-6">
          <div class="mb-3 ">
            <label for="rating" class="form-label">Rating</label>
            <input
              name="rating"
              type="range"
              class="form-range"
              min="1"
              max="5"
              required
              
            />
            <div class="invalid-feedback">Price is Invalid</div>
          </div>
          <div class="mb-3">
            <label for="date" class="form-label">Creation Date</label>
            <input
              type="date"
              name="date"
              class="form-control"
            />
          </div>
        </div>
        <br />
        <div class="mb-3 offset-4 ">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>
</body>
